{% extends 'base2.html.twig' %}

{% block title %}Tafel index{% endblock %}

{% block body %}
<h1>Tafel</h1>
<hr>
<table class="table">
    <thead>
    <tr>
		            <th>Id</th>
		            <th>Personen</th>
		            <th>Naam</th>
		        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for tafel in tafels %}
    <tr>
		            <td>{{ tafel.id }}</td>
		            <td>{{ tafel.personen }}</td>
		            <td>{{ tafel.naam }}</td>
		        <td>
            <a class="btn btn-primary" href="{{ path('tafel_show', {'id': tafel.id}) }}">Bekijk</a>
            <a class="btn btn-warning" href="{{ path('tafel_edit', {'id': tafel.id}) }}">Bewerk</a>
        </td>
    </tr>
    {% else %}
    <tr>
        <td colspan="4">Geen gegevens gevonden</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-success" href="{{ path('tafel_new') }}">Nieuw</a>
{% endblock %}
