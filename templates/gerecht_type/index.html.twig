{% extends 'base2.html.twig' %}

{% block title %}GerechtType index{% endblock %}

{% block body %}
<h1>GerechtType</h1>
<hr>
<table class="table">
    <thead>
    <tr>
		            <th>Id</th>
		            <th>Naam</th>
		        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for gerecht_type in gerecht_types %}
    <tr>
		            <td>{{ gerecht_type.id }}</td>
		            <td>{{ gerecht_type.naam }}</td>
		        <td>
            <a class="btn btn-primary" href="{{ path('gerecht_type_show', {'id': gerecht_type.id}) }}">Bekijk</a>
            <a class="btn btn-warning" href="{{ path('gerecht_type_edit', {'id': gerecht_type.id}) }}">Bewerk</a>
        </td>
    </tr>
    {% else %}
    <tr>
        <td colspan="3">Geen gegevens gevonden</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-success" href="{{ path('gerecht_type_new') }}">Nieuw</a>
{% endblock %}
